%body{:style => "background-color: #eee;"}
  %section.p-4.p-md-5
    .row.d-flex.justify-content-center
     
      .col-md-10.col-lg-8.col-xl-5
        %h4
          Hey,
          #{ current_user.username }
          %small please fill the form
        .card.rounded-3
          .card-body.p-4
            .text-center.mb-4
              %h3 #{ @item.title }
              %h6 
                Total Price:
                #{ @item.price }
                $
            
            %p.fw-bold.mb-4.pb-2 Enter your credentials:
            .form-outline.mb-4
              %input#formControlLgXsd.form-control.form-control-lg{type: "text", value: "Anna Doe"}/
              %label.form-label{for: "formControlLgXsd"} Cardholder's Name
            .row.mb-4
              .col-7
                .form-outline
                  %label Card Number
                  %input#formControlLgXM.form-control.form-control-lg{type: "text", value: "1234 5678 1234 5678"}/
                  %img.img-fluid{src: "https://img.icons8.com/color/48/000000/visa.png"}
              
              .col-6
                .form-outline
                  %label.form-label{for: "formControlLgExpk"} Expire
                  %input#formControlLgExpk.form-control.form-control-lg.mb-2{placeholder: "MM/YYYY", type: "password"}/
              
              .col-6
                .form-outline
                  %label.form-label{for: "formControlLgcvv"} Cvv
                  %input#formControlLgcvv.form-control.form-control-lg{placeholder: "Cvv", type: "password"}/
            = button_to "Pay",  {:controller => :order, :action => 'create', :product_id => @item.id}, :method => :post, :class => 'btn btn-success'
            = link_to "Go Home", root_path, class: 'btn btn-primary'

  :javascript
    function success() {
      alert("Your payment is succsess!")
    }