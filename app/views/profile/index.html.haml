%style
  :plain
    .gradient-custom {
      background: #f6d365;
      background: -webkit-linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1));
      background: linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1))
    }

%section.vh-100{style: "background-color: #f4f5f7;"}
  .container.py-5.h-100
    .row.d-flex.justify-content-center.align-items-center.h-100
      .col.col-lg-6.mb-4.mb-lg-0
        .card.mb-3{style: "border-radius: .5rem;"}
          .row.g-0
            .col-md-4.gradient-custom.text-center.text-white{style: "border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;"}
              %img.img-fluid.my-5{alt: "Avatar", src: "https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp", style: "width: 80px;"}/
              %h5 Marie Horwitz
              %p #{ current_user.username }
              = link_to "Edit", profile_path(:id => current_user.id), class: 'btn btn-primary'
              = link_to "Go Home", root_path, class: 'btn btn-primary'
            .col-md-8
              .card-body.p-4
                %h6 Information
                %hr.mt-0.mb-4/
                .row.pt-1
                  .col-6.mb-3
                    %h6 Email
                    %p.text-muted #{ current_user.email }
                  .col-6.mb-3
                    %h6 Phone
                    %p.text-muted 123 456 789
                %h6 Projects
                %hr.mt-0.mb-4/
                .row.pt-1
                  .col-6.mb-3
                    %h6 Recent
                    %p.text-muted Lorem ipsum
                  .col-6.mb-3
                    %h6 Most Viewed
                    %p.text-muted Dolor sit amet
                .d-flex.justify-content-start
                  %a{href: "#!"}
                    %i.fab.fa-facebook-f.fa-lg.me-3
                  %a{href: "#!"}
                    %i.fab.fa-twitter.fa-lg.me-3
                  %a{href: "#!"}
                    %i.fab.fa-instagram.fa-lg